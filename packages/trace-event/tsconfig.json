{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "newLine": "LF",
    "moduleResolution": "node",
    "module": "commonjs",
    "preserveConstEnums": true,
    "target": "es2017",
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules", "dist"]
}
